/* pages/index/index.wxss */
.banner{
  width: 100%;
  height: 300rpx;
}
.banner_image{
  width: 100%;
  height: 100%;
}

.navContainer{
  display: flex;
  flex-direction: row;
  width: 100%;
}

.navContainer .navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navContainer .navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background:rgb(240, 19, 19);
  font-size:50rpx;
  color: white;
  margin: 20rpx 0;
}

.navContainer .navItem text{
  font-size: 30rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.recommendScroll{
  display: flex;
  height: 300rpx;
}

.recommendScroll .scrollItem{
  width: 200rpx;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}

.recommendScroll .scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.recommendScroll .scrollItem text{
  font-size: 26rpx;
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行列表 */

.topList {
  padding: 20rpx;
}

.topListSwiper {
  height: 400rpx;
}

.swiperItem {
  width: 96%;
  background: #fbfbfb;
}
.swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem {
  /* 当一个元素设置为flex，其子元素会自动成为block元素*/
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
