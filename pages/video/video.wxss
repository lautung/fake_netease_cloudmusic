/* pages/video/video.wxss */


/* 头部 */
.videoContainer .header {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
}

.videoContainer .header .search {
  line-height: 60rpx;
  flex: 1;
  text-align: center;
  color: #d43c33;
  margin: 0 20rpx;
  font-size: 26rpx;
}

.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}

/* 导航区域 */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}

.navScroll .navItem {
  margin: 0 25rpx;
  font-size: 26rpx;
  height: 60rpx;
}

.navScroll .navItem .navContent {
  height: 60rpx;
  line-height: 60rpx;
  /* 注意box-sizing */
  box-sizing: border-box;
}

.navScroll .navItem .active {
  border-bottom: 1rpx solid #d43c33
}

/* 视频列表区域 */
.videoScrollView {
  margin-top: 10rpx;
  /* 计算css的宽高 ： calc注意运算符左右要空格*/
  /* 视口单位：vh vw 1vh =1%的视口单位 1vw=1%是视口宽度 */
  height: calc(100vh - 130rpx);
}

.videoItem {
  padding: 0 2%;
}


.videoItem .video-image {
  width: 100%;
  height: 450rpx;
  border-radius: 10rpx;
}




.videoItem .content {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}

.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}